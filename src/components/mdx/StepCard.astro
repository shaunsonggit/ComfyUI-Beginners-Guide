---
interface Props {
  title: string;
  index: number;
  summary?: string;
}

const { title, index, summary, ...rest } = Astro.props as Props;
---
<section class="flex items-start gap-4 rounded-2xl border border-slate-200 bg-white p-6 shadow-sm transition hover:border-primary/40 hover:shadow-lg dark:border-slate-700 dark:bg-slate-900" {...rest}>
  <div class="flex h-10 w-10 items-center justify-center rounded-full bg-primary/10 text-lg font-bold text-primary">
    {index}
  </div>
  <div class="space-y-2 text-sm leading-relaxed text-slate-600 dark:text-slate-300">
    <h3 class="text-base font-semibold text-slate-800 dark:text-slate-100">{title}</h3>
    {summary && <p>{summary}</p>}
    <slot />
  </div>
</section>
