---
interface Props {
  src: string;
  alt: string;
  caption?: string;
  description?: string;
}

const { src, alt, caption, description } = Astro.props as Props;
---
<figure class="space-y-3 rounded-2xl border border-primary/20 bg-primary/5 p-5 shadow-sm dark:border-primary/40 dark:bg-primary/10">
  <div class="overflow-hidden rounded-xl border border-primary/30">
    <img src={src} alt={alt} loading="lazy" class="w-full" />
  </div>
  {caption && <figcaption class="text-sm font-semibold text-primary">{caption}</figcaption>}
  {description && <p class="text-sm text-slate-600 dark:text-slate-300">{description}</p>}
</figure>
