---
interface Props {
  title: string;
  tone?: "info" | "warning" | "success";
}

const tone = Astro.props.tone ?? "info";
const palette = {
  info: "border-primary/40 bg-primary/5 text-primary",
  warning: "border-amber-400/60 bg-amber-50 text-amber-700 dark:bg-amber-500/10 dark:text-amber-200",
  success: "border-emerald-400/50 bg-emerald-50 text-emerald-700 dark:bg-emerald-500/10 dark:text-emerald-200"
}[tone];
---
<div class={`rounded-xl border ${palette} px-5 py-4 text-sm shadow-sm`}
  role="note"
>
  <p class="text-sm font-semibold">
    {Astro.props.title}
  </p>
  <div class="mt-2 space-y-3 text-slate-600 dark:text-slate-300">
    <slot />
  </div>
</div>
