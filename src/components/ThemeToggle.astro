---
const toggleId = "theme-toggle";
---
<button
  id={toggleId}
  type="button"
  class="flex items-center gap-2 rounded-full border border-slate-300 bg-white/80 px-3 py-1 text-xs font-semibold text-slate-600 shadow-sm transition hover:border-primary hover:text-primary focus:outline-none focus:ring-2 focus:ring-primary/60 dark:border-slate-600 dark:bg-slate-800/70 dark:text-slate-200"
  aria-label="切换亮暗主题"
>
  <span aria-hidden="true" class="inline-flex h-5 w-5 items-center justify-center rounded-full bg-primary/10 text-primary dark:bg-primary/20">
    <svg class="h-4 w-4" viewBox="0 0 24 24" stroke="currentColor" fill="none" stroke-width="1.6">
      <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2m5.196 1.804-1.414 1.414M21 12h-2m-1.804 5.196-1.414-1.414M12 21v-2m-5.196-1.804 1.414-1.414M3 12h2m1.804-5.196 1.414 1.414M16 12a4 4 0 1 1-8 0 4 4 0 0 1 8 0z" />
    </svg>
  </span>
  <span class="hidden sm:inline">切换主题</span>
</button>
<script is:inline>
  (function () {
    const storageKey = "comfyui-guide-theme";
    const preferDark = () => window.matchMedia && window.matchMedia("(prefers-color-scheme: dark)").matches;
    const root = document.documentElement;
    const toggle = document.getElementById("theme-toggle");

    const setMode = (mode) => {
      if (mode === "dark") {
        root.classList.add("dark");
        root.classList.remove("light");
      } else {
        root.classList.remove("dark");
        root.classList.add("light");
      }
      root.style.colorScheme = mode;
      localStorage.setItem(storageKey, mode);
    };

    const init = () => {
      const saved = localStorage.getItem(storageKey);
      if (saved) {
        setMode(saved);
      } else {
        setMode(preferDark() ? "dark" : "light");
      }
    };

    init();

    toggle?.addEventListener("click", () => {
      const nextMode = root.classList.contains("dark") ? "light" : "dark";
      setMode(nextMode);
    });

    if (window.matchMedia) {
      const mediaQuery = window.matchMedia("(prefers-color-scheme: dark)");
      const handleChange = (event) => {
        if (!localStorage.getItem(storageKey)) {
          setMode(event.matches ? "dark" : "light");
        }
      };
      mediaQuery.addEventListener("change", handleChange);
    }
  })();
</script>
